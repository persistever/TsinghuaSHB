<!--pages/index/to_news/to_news.wxml-->
<!--上半部分加入书籍图片和信息以及接口的view-->
<view class='tab'>
  <view class='flex'>
  <view>
    <image bindtap="ToBook" class='book_img' src='{{itemCoverPath}}' mode="aspectFit"></image>
  </view>
  <view class = 'right'>
    <view><text class='book_name'>资料名：{{itemName}}</text></view>
    <view><text class='book_price'>价格：{{itemPrice}}</text></view>
    <view><text class='book_price'>类型：{{itemSort}}</text></view>
    <view><text class='book_status'>{{bookstatus}}</text></view>
  </view>
  </view>
</view>

<!--下半部分聊天view-->
