    ll-into-view="{{item.messageSendTime}}" class="history" wx:for="{{messageList}}" wx:key=''> -->
      <view>
        <text class='time'>{{item.messageSendTime}}</text> 
      </view>
      <block wx:if="{{item.messageSendUserID ==userID}}">
        <view class='my_right'>
          <view class='page_row'>
            <!-- <text wx:if='{{!item.is_img}}' class='new_txt'>"{{item.messageInput}}"</text> -->
            <text class='new_txt'>{{item.messageInput}}</text>
            <!-- <image wx:if='{{item.is_img}}' src='\images\banner_1/{{item.content}}' class='new_imgtent'></image> -->
