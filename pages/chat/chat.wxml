  <view class='message'>
  <text>{{inputMessage}}</text>
  </view>
  <view class='xiahuaxian1 xiahuaxia'></view>
  <view class="historycon">
    <scroll-view scroll-y="true" scroll-top="{{scrollTop}}" class="history" wx:for="{{messageList}}" wx:key=''>
